<h3>プロフィール変更</h3>

<%= form_with model: @user, url: users_edit_path, local: true do |f| %>
  <table>
    <tr>
      <th><p>アイコン画像の編集部分</p></th>
    </tr>
    <tr>
      <th><%= f.label :name, '名前' %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :introduce, '自己紹介' %></th>
      <td><%= f.text_area :introduce %></td>
    </tr>
  </table>
  <%= f.submit "更新" %>
<% end %>

<%= link_to "キャンセル", :back %>
